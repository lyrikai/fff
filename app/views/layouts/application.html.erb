  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex flex-column  align-items-center">
<a class="navbar-brand" href="<%= root_path %>">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" href= <%= pages_team_path %> >Team <span class="sr-only"></span></a>
      <a class="nav-item nav-link" href="<%= pages_contact_path %>">Contact</a>
      <a class="nav-item nav-link" href="<%= new_gossip_path %>">New</a>

        <% if logged_in? %>

        <%= link_to "Logout", session_path(session.id), data: { "turbo-method": :delete } %>

        <%else %>

         <a class="nav-item nav-link" href=<%= new_session_path %>>Login</a>
        <a class="nav-item nav-link" href=<%= new_author_path %>>S'inscrire</a>

    <% end %>

</div>

    </div>
  </div>
</nav>

    <%= yield %>
